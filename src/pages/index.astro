---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section>
    <div
      class="from-background via-background/95 to-muted/20 relative overflow-hidden rounded-xl border bg-gradient-to-br shadow-lg backdrop-blur-sm"
    >
      <div class="bg-grid-pattern absolute inset-0 opacity-5"></div>
      <div class="relative flex flex-col space-y-3 p-8">
        <div class="flex items-center gap-2">
          <h3
            class="from-foreground to-foreground/70 bg-gradient-to-r bg-clip-text text-4xl leading-none font-bold text-transparent"
          >
            si·mon
          </h3>
          <div class="bg-primary h-2 w-2 animate-pulse rounded-full"></div>
        </div>
        <p class="text-muted-foreground font-mono text-sm">
          /ˈsiːmən/ &bull; <span class="text-primary font-medium">noun</span>
        </p>
        <div
          class="via-border h-px bg-gradient-to-r from-transparent to-transparent"
        >
        </div>
        <p class="text-muted-foreground text-sm leading-relaxed">
          From the Hebrew Shim'on – meaning <span
            class="text-foreground font-medium">"the one who listens."</span
          >
          <br />
          In code: the one who listens to systems, deciphers complexity, and answers
          with structured, scalable solutions. Also known to assemble ideas like
          LEGO bricks, and wield his Go-lightsaber against spaghetti code.
        </p>
        <div class="flex items-center gap-2 pt-2">
          <div class="flex gap-1">
            <div class="bg-primary/60 h-1 w-8 rounded"></div>
            <div class="bg-primary/40 h-1 w-4 rounded"></div>
            <div class="bg-primary/20 h-1 w-2 rounded"></div>
          </div>
          <span class="text-muted-foreground/60 text-xs">Go Developer</span>
        </div>
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
